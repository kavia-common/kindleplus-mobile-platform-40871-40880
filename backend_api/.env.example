S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# GCS (if STORAGE_BACKEND=gcs)
GCS_BUCKET=
GCS_CREDENTIALS_JSON= # base64 or file path

# Payments
PAYMENT_PROVIDER=mock # mock|stripe|razorpay
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=
CURRENCY_DEFAULT=USD

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3030
